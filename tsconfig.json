{
  "compilerOptions": {
    "outDir": "app/dist/js",
    "target": "ES6",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "app/src/**/*"
  ],
}